{
  "name": "@h6s/calendar",
  "version": "2.0.3",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/h6s.git",
    "directory": "packages/calendar"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.cts",
    "exports": {
      ".": {
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        },
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "yarn run -T tsup",
    "lint": "yarn run -T biome check src/",
    "lint:fix": "yarn lint --write",
    "typecheck": "yarn run -T tsc",
    "test": "yarn run -T vitest",
    "test:playwright": "playwright test",
    "test:cov": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  },
  "devDependencies": {
    "@playwright/test": "1.17.1",
    "@storybook/react": "7.6.6",
    "@testing-library/dom": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@types/node": "*",
    "@types/react": "*",
    "date-fns": "4.1.0",
    "jsdom": "*",
    "playwright": "1.17.1",
    "react": "*",
    "react-dom": "*",
    "react-test-renderer": "*",
    "typescript": "*",
    "vite": "*",
    "vitest": "*"
  },
  "peerDependencies": {
    "date-fns": ">= 2",
    "react": ">= 18"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  }
}
